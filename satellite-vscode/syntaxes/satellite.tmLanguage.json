{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Satellite",
    "scopeName": "source.satellite",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#variables"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#strings"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.satellite",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.satellite",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.satellite",
                    "match": "\\b(AND|OR|NOT|XOR|and|or|not|xor|eq|if|then|else|forall|exists)\\b"
                },
                {
                    "name": "keyword.type.satellite",
                    "match": "\\b(bool|batch|int|vec|float)\\b"
                },
                {
                    "name": "constant.language.satellite",
                    "match": "\\b(True|False|true|false|SAT|UNSAT)\\b"
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.satellite",
                    "match": "%\\^?\\*?[a-zA-Z_][a-zA-Z0-9_]*"
                },
                {
                    "name": "variable.parameter.satellite",
                    "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.satellite",
                    "match": "[+\\-*/%\\^&|~<>=!]+"
                },
                {
                    "name": "keyword.operator.assignment.satellite",
                    "match": "="
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.satellite",
                    "match": "\\b-?\\d+\\b"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.satellite",
                    "begin": "\"",
                    "end": "\""
                }
            ]
        }
    }
}